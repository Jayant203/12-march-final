{
    "variables":{
            "packagename" : "drupal"
	   
    },
"builders": [
    {
      "ami_name": "ion-packer-{{timestamp}}",
      "instance_type": "t2.micro",
      "region":"us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "tags": {
        "Name": "packer_ami"
      },
      "ssh_username": "ubuntu",
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": ["input= {{ user `packagename` }}" ],
      "scripts": ["script.sh"]

    }
   ]
 

}
